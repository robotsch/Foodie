<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Reseting CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/topbar.css" type="text/css" />
  <link rel="stylesheet" href="/styles/cart.css" type="text/css" />
  <link rel="stylesheet" href="/styles/checkout.css" type="text/css" />

  <!-- jQuery -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  <!-- app.js -->
  <script type="text/javascript" src="/scripts/checkout.js"></script>

  <title>Checkout | Golden Wok</title>
</head>

<body>

  <%- include('partials/_topbar') %>

    <div class="container-md d-flex flex-column align-items-center mt-4" id="checkout-container">
      <h3>Checkout</h3>
      <hr>
      <h4>Items</h4>
      <div id="totals-container">
        <div>
          <div>Subtotal</div>
          <div></div>
        </div>
        <div>
          <div>Serivce Fee</div>
          <div></div>
        </div>
        <div>
          <div></div>
          <div>Tax</div>
        </div>
        <div>
          <div>Total</div>
          <div></div>
        </div>
      </div>
      <hr>
      <h4>Payment Info</h4>
      <form action="" class="text-center">
        <div>
          <label for="cc-name" class="form-label">Name on card</label>
          <input type="text" class="form-control" id="cc-name" placeholder="" required="">
          <small class="text-muted">Full name as displayed on card</small>
        </div>
        <div>
          <label for="cc-number" class="form-label">Credit card number</label>
          <input type="text" class="form-control" id="cc-number" placeholder="" required="">
        </div>
        <div>
          <label for="cc-expiration" class="form-label">Expiration</label>
          <input type="text" class="form-control" id="cc-expiration" placeholder="" required="">
        </div>
        <div>
          <label for="cc-cvv" class="form-label">CVV</label>
          <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
        </div>
        <hr>
        <div>Approximate pickup time will be shown after completing checkout</div>
        <div>Pickup at 94 Halsey Ave, Toronto</div>
        <hr>
        <button type="button" class="btn btn-primary" id="place-order-btn">Place Order</button>
      </form>
    </div>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
</body>

</html>